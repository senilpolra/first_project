<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage">

<!--    <Spinner-->
<!--        android:id="@+id/spinner"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/menu"-->
<!--        android:layout_marginTop="0dp" />-->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/manu"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/homelogo"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/Ivrectangles"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/rectangleimg"
        android:layout_below="@+id/logo"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvoffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50-40% OFF"
        android:layout_below="@+id/menu"
        android:layout_marginTop="60dp"
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvnowin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now in (product)"
        android:layout_below="@+id/tvoffer"
        android:textSize="18dp"
        android:textColor="#E6E6E6"
        android:layout_marginLeft="15dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvallcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Colours"
        android:layout_below="@+id/tvnowin"
        android:textSize="18dp"
        android:textColor="#E4E4E4"
        android:layout_marginLeft="15dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Shope Now  ->"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@drawable/shape2"
        android:layout_below="@+id/tvallcolor"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvpost"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_below="@+id/Ivrectangles"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        tools:listitem="@layout/rv_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/Ivmac"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/rvpost"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/mac" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Ivhading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flat and Heels"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_below="@+id/rvpost"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Tvparegraph"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvpost"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:text="Stand a chance to get rewarded"
        android:textColor="@color/black"
        android:textSize="16dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="View Now  ->"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@drawable/shape3"
        android:layout_below="@+id/rvpost"
        android:layout_marginTop="120dp"
        android:paddingStart="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Ivhome"
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/home_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/red"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Ivheart"
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:layout_marginLeft="105dp"
            android:src="@drawable/heart" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wishlist"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="95dp"
            android:textColor="@color/black"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Ivshoping"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/shoping" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Ivsearch"
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="275dp"
            android:src="@drawable/search_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="275dp"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Ivsettings"
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="350dp"
            android:src="@drawable/settings" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="345dp"
            android:textColor="@color/black"/>



    </androidx.cardview.widget.CardView>


</RelativeLayout>