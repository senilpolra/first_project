<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvwelcom"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:textSize="45sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etusre"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:hint="Username or Email"
        style="@style/bordar"
        android:layout_below="@+id/tvwelcom"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="60dp"
        android:paddingStart="10dp"
        android:background="@drawable/shape"
        android:drawableStart="@drawable/user"
        android:drawablePadding="10sp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etpassword"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:layout_below="@+id/etusre"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/shape"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/group"
        android:drawableEnd="@drawable/eye"
        android:drawablePadding="10sp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:hint="ConfirmPassword"
        android:layout_below="@+id/etpassword"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/shape"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/group"
        android:drawableEnd="@drawable/eye"
        android:drawablePadding="10sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textregidter"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="By clicking the Register button, you agree to the public offer"
        android:layout_below="@+id/ConfirmPassword"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Buttcreateaccount"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:text="Create Account"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/shape1"
        android:layout_below="@+id/ConfirmPassword"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvcontinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- OR Continue with -"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Buttcreateaccount"
        android:layout_marginTop="50dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvcontinue"
        android:layout_marginTop="15dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvaccutn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Already Have an Account"
        android:textSize="18dp"
        android:layout_below="@+id/google"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="25dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="18dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp"
        android:textColor="#F83758"
        android:layout_below="@+id/google"
        android:layout_marginTop="25dp"/>

</RelativeLayout>